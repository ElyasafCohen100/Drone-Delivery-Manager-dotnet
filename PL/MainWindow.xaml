<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown">

    <Window.Background>
        <ImageBrush ImageSource ="https://img.haarets.co.il/img/1.5659514/1018316866.jpg" Opacity="0.8"/>
    </Window.Background>

    <Grid>

        <TextBox HorizontalAlignment="Left" Margin="0,10,0,0" Padding="20,10" Text="Yakir and Elyasaf" Visibility="Visible" FontStyle="Italic" TextWrapping="Wrap" VerticalAlignment="Top" Width="282" Height="61" FontSize="30" FontFamily="Playball">
            <TextBox.Background>
                <ImageBrush/>
            </TextBox.Background>
        </TextBox>

        <Button Name="CloseButton" Content="Close"  HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10,0,10,0" Foreground="#FFF60C0C" Click="Close_Click" FontWeight="Normal" Cursor="Hand" Margin="692,40,0,0" Height="29" Width="78" FontSize="20" FontFamily="Sitka Text"/>
        <Button Name="LoginButton" Content="Login" HorizontalAlignment="Center" Margin="0,284,0,0" VerticalAlignment="Top" Height="36" Width="152" FontSize="18" Click="LoginButton_Click" Cursor="Hand"/>

        <TextBox Name="UserNameTB" HorizontalAlignment="Center" Margin="0,149,0,0" Text="User Name" TextWrapping="NoWrap" VerticalAlignment="Top" Width="232" Height="36" GotFocus="UserNameTB_GotFocus" LostFocus="UserNameTB_LostFocus"/>
        <PasswordBox Name="PasswordPB" Password="Password" HorizontalAlignment="Center" VerticalAlignment="Center" Width="232" Height="36" GotFocus="PasswordTB_GotFocus" LostFocus="PasswordTB_LostFocus"/>
      

    </Grid>
</Window>
