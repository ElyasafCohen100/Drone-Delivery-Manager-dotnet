<Window x:Class="PL.UpdateDroneStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="SendDroneToDelivery" Height="450" Width="800">
    <Grid>
        <TextBox Name="DroneIdTextBox" HorizontalAlignment="Left" Margin="353,115,0,0" Text="Enter drone Id" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" GotFocus="DroneIdTextBox_GotFocus" LostFocus="DroneIdTextBox_LostFocus" PreviewTextInput="DroneIdTextBox_PreviewTextInput"/>
        <Button Name="SendButton" Content="Send Drone To Delivery" HorizontalAlignment="Left" Margin="272,254,0,0" VerticalAlignment="Top" Click="SendDroneToDeliveryButton_Click"/>
        <Button Name="UpdateParcelToPickedUp" Content="Update Parcel To Picked Up" HorizontalAlignment="Left" Margin="52,254,0,0" VerticalAlignment="Top" Click="UpdateParcelToPickedUp_Click"/>
        <Button Name="UpdateParcelToDelivered" Content="Update Parcel To Delivered" HorizontalAlignment="Left" Margin="501,259,0,0" VerticalAlignment="Top" Click="UpdateParcelToDelivered_Click"/>

    </Grid>
</Window>
