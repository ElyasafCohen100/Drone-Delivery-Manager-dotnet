<Window x:Class="PL.UpdateDroneModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="UpdateDroneModel" Height="450" Width="800" Closing="Window_Closing">
    
    <Window.Background>
        <ImageBrush ImageSource="https://m.media-amazon.com/images/I/617dNWWRQaL._AC_SL1500_.jpg" Opacity="0.4"/>
    </Window.Background>
    
    <Grid>
        <Button Content="Close" HorizontalAlignment="Left" Margin="699,24,0,0" VerticalAlignment="Top" Foreground="#FFF60C0C" Cursor="Hand" Click="Close_Button_Click" Height="21" Width="62"/>
        <Button Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Margin="329,310,0,0" VerticalAlignment="Top" Click="UpdateDroneModelButton_Click" Cursor="Hand" Height="23" Width="110"/>

        <TextBox Name ="ModelTextBox" HorizontalAlignment="Left"  Margin="274,162,0,0" Text="Enter Model" TextWrapping="NoWrap" VerticalAlignment="Top" Width="220" GotFocus="ModelTextBox_GotFocus" LostFocus="ModelTextBox_LostFocus" Cursor="Hand" PreviewTextInput="ModelIdTextBox_PreviewTextInput" KeyDown="ModelTextBox_KeyDown" Height="43"/>

    </Grid>
</Window>
