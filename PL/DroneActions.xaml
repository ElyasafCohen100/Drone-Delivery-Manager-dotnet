<Window x:Class="PL.DroneActions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneActions" Height="450" Width="800">
    <Grid>
        <Grid>
            <Button Content="Exit" HorizontalAlignment="Left" Margin="637,65,0,0" VerticalAlignment="Top" Width="50" Foreground="#FFF60C0C" Cursor="Hand"/>
            <Button Name="UpdateModel" Content="Update Model" HorizontalAlignment="Left" Margin="70,100,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="UpdateDroneModel_Click" Cursor="Hand"/>
            <Button Name="UpdateDroneCharging" Content="Update Drone Charging" HorizontalAlignment="Left" Margin="70,150,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="UpdateDroneCharging_Click" Cursor="Hand"/>
            <Button Name="UpdateParcelStatus" Content="Update Parcel Status" HorizontalAlignment="Left" Margin="70,200,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="UpdateParcelStatus_Click" Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>
