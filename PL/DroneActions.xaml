<Window x:Class="PL.DroneActions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneActions" Height="450" Width="800">
    <Grid>
        <Grid>
            <Button Content="Exit" HorizontalAlignment="Left" Margin="637,65,0,0" VerticalAlignment="Top" Width="50" Foreground="#FFF60C0C"/>
            <Button Name="UpdateModel" Content="Update Model" HorizontalAlignment="Left" Margin="300,50,0,0" VerticalAlignment="Top" Height="35" Width="110" Click="UpdateDroneModel_Click"/>
            <Button Name="UpdateDroneCharging" Content="Update Drone Charging" HorizontalAlignment="Left" Margin="300,100,0,0" VerticalAlignment="Top" Height="29" Width="170" Click="UpdateDroneCharging_Click"/>
            <Button Name="SendDroneToDelivery" Content="Send Drone To Delivery" HorizontalAlignment="Left" Margin="300,0,0,0" VerticalAlignment="Center" Height="33" Width="170"/>
            <Button Name="UpdateParcelToPickedUp" Content="Update Parcel To Picked Up" HorizontalAlignment="Left" Margin="300,250,0,0" VerticalAlignment="Top" Height="26" Width="170"/>
        </Grid>
    </Grid>
</Window>
