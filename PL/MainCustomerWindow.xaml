<Window x:Class="PL.MainCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainCustomerWindow" Height="450" Width="800"
        WindowStyle="None" MouseDown="NoveMouse">

    <Window.Background>
        <ImageBrush ImageSource="resources/mainCustomerWindow.jpg" Stretch="Fill" Opacity="0.3"/>
    </Window.Background>

    <Grid>

        <Image Source="\resources\OurLogo.png" Margin="238,35,256,217"/>

        <Button Name="AddParcelButton" Content="Add A Parcel" HorizontalAlignment="Left" Margin="496,290,0,0" VerticalAlignment="Top" Height="38" Width="203" Click="AddParcelFromCustomerButton_Click" FontSize="20"/>
        <Button Name="ViewParcel" Content="View Parcel" HorizontalAlignment="Left" Margin="106,290,0,0" VerticalAlignment="Top" Height="38" Width="208" Click="ViewParcelFromCustomer_Click" FontSize="20"/>
        <Button Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="700,23,0,0" VerticalAlignment="Top" Height="25" Width="76" Foreground="Red" Click="CloseButton_Click"/>

    </Grid>
</Window>
