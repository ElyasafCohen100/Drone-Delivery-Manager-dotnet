<Window x:Class="PL.AddParcelFromCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddParcelFromCustomerWindow" Height="450" Width="800"
        WindowStyle="None" MouseDown="MoveWindow">

    <Window.Background>
        <ImageBrush ImageSource="\resources\AddParcelFromCustomer.jpg" Stretch="Fill"/>
    </Window.Background>

    <Grid>
        <TextBlock Name="PriorityTextBlock" HorizontalAlignment="Left" Margin="41,88,0,0" Text="Priority:" TextWrapping="NoWrap" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Sitka Text" FontStyle="Italic"/>
        <TextBlock Name="WeightTextBlock" HorizontalAlignment="Left" Margin="326,89,0,0" Text="Max Weight:" TextWrapping="NoWrap" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Sitka Text" FontStyle="Italic"/>
        <TextBlock Name="ReceiverCustomerIdTextBlock" HorizontalAlignment="Left" Margin="615,89,0,0" Text="Receiver Id:" TextWrapping="NoWrap" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Sitka Text" FontStyle="Italic"/>

        <ComboBox Name="PrioritySelctor" HorizontalAlignment="Left" Margin="39,104,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox Name="WeightSelctor" HorizontalAlignment="Left" Margin="324,104,0,0" VerticalAlignment="Top" Width="120" />
        <ComboBox Name="ReceiverCustomerIdSelector" HorizontalAlignment="Left" Margin="615,104,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Name="AddParcelButton" Content="Add A Parcel" HorizontalAlignment="Left" Margin="308,334,0,0" VerticalAlignment="Top" Height="38" Width="152" Click="AddParcelButton_Click"/>
        <Button Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="696,18,0,0" VerticalAlignment="Top" Height="25" Width="79" Foreground="Red" Click="CloseButton_Click"/>

    </Grid>
</Window>
