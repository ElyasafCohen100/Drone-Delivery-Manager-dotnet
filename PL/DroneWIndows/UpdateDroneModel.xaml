<Window x:Class="PL.UpdateDroneModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="UpdateDroneModel" Height="450" Width="800" Closing="Window_Closing"
        WindowStyle="None" MouseDown="MoveMouse">

    <Window.Background>
        <ImageBrush ImageSource= "\resources\UpdateModel.jpg" Opacity="0.4"/>
    </Window.Background>

    <Grid KeyDown="Window_KeyDown">
        <Button Content="Close" HorizontalAlignment="Left" Margin="699,24,0,0" VerticalAlignment="Top" Foreground="#FFF60C0C" Click="Close_Button_Click" Height="21" Width="62"/>
        <Button Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Margin="328,287,0,0" VerticalAlignment="Top" Click="UpdateDroneModelButton_Click" Height="39" Width="136" FontSize="15"/>

        <TextBox Name ="ModelTextBox" HorizontalAlignment="Left"  Margin="274,0,0,0" Text="Enter Model" TextWrapping="NoWrap" VerticalAlignment="Center" Width="245" GotFocus="ModelTextBox_GotFocus" LostFocus="ModelTextBox_LostFocus" Cursor="Hand" PreviewTextInput="ModelIdTextBox_PreviewTextInput" KeyDown="ModelTextBox_KeyDown" Height="57"/>

    </Grid>
</Window>
